<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <set>
            <objectAnimator android:interpolator="@android:interpolator/accelerate_decelerate" android:duration="100" android:valueTo="1.2" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@android:interpolator/accelerate_decelerate" android:duration="100" android:valueTo="1.2" android:propertyName="scaleY" />
        </set>
    </item>
    <item android:state_focused="false">
        <set>
            <objectAnimator android:interpolator="@android:interpolator/accelerate_decelerate" android:duration="100" android:valueTo="1" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@android:interpolator/accelerate_decelerate" android:duration="100" android:valueTo="1" android:propertyName="scaleY" />
        </set>
    </item>
</selector>
