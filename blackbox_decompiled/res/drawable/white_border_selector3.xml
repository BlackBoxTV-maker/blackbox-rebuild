<?xml version="1.0" encoding="utf-8"?>
<selector android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorThemeDarks" />
            <corners android:radius="4.0dip" />
            <padding android:left="4.0dip" android:right="4.0dip" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent30" />
            <corners android:radius="4.0dip" />
            <padding android:left="4.0dip" android:right="4.0dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/colorTheme" android:endColor="@color/colorThemeDarks" android:angle="180.0" android:centerColor="@color/colorTheme" />
            <corners android:radius="4.0dip" />
            <padding android:left="4.0dip" android:right="4.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/colorTheme" android:endColor="@color/colorThemeDarks" android:angle="180.0" android:centerColor="@color/colorTheme" />
            <corners android:radius="4.0dip" />
            <padding android:left="4.0dip" android:right="4.0dip" />
        </shape>
    </item>
</selector>
