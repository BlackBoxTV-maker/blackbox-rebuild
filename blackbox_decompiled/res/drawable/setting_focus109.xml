<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16.0dip" />
            <gradient android:startColor="@color/transparent60" android:endColor="@color/transparent60" android:angle="90.0" />
            <stroke android:width="2.0dip" android:color="@color/colorRedDark" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="16.0dip" />
            <gradient android:startColor="@color/transparent60" android:endColor="@color/transparent60" android:angle="90.0" />
            <stroke android:width="2.0dip" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16.0dip" />
            <gradient android:startColor="@color/transparent60" android:endColor="@color/transparent60" android:angle="90.0" />
            <stroke android:width="2.0dip" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="16.0dip" />
            <gradient android:startColor="@color/transparent" android:endColor="@color/transparent" android:angle="90.0" />
        </shape>
    </item>
</selector>
