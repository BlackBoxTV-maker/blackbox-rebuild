<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <rotate android:fromDegrees="10.0">
            <shape>
                <gradient android:startColor="@color/colorSettingOption" android:endColor="@color/colorSettingOption" android:angle="270.0" />
            </shape>
        </rotate>
    </item>
    <item android:state_pressed="true">
        <rotate android:fromDegrees="10.0">
            <shape>
                <gradient android:startColor="@color/colorSettingOption" android:endColor="@color/colorSettingOption" android:angle="270.0" />
                <stroke android:width="5.0dip" android:color="@color/colorPrimay" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="10.0">
            <shape>
                <gradient android:startColor="@color/colorSettingOption" android:endColor="@color/colorSettingOption" android:angle="270.0" />
                <stroke android:width="5.0dip" android:color="#ffffffff" />
            </shape>
        </rotate>
    </item>
</selector>
